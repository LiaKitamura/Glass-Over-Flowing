<%= form_tag(search_path, method: :get, class: "navbar-form navbar-right") do %>
  <div class="input-group">

    <%= text_field_tag(:q, '', placeholder: 'Search...', class: 'form-control') %>
    <span class="input-group-btn">
      <%= submit_tag("search", class: 'fa fa-search btn btn-primary') %>
    </span>
  </div>
<% end %>
