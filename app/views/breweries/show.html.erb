<%= render 'layouts/navbar2' %>
<div class="content-section beer-page">
  <div class="container">
    <div class="brewery-page">
      <div class="row">
        <%= image_tag(@brewery.large_image) %>
        <h1><%= @brewery.brewery_name %></h1>
        <p>Established: <%= @brewery.established %></p>
        <p>Phone: <%= @brewery.phone %></p>
        <p><%= @brewery.hours %></p>
        <p>Website: <%= @brewery.website %></p>
        <address>
          <%= @brewery.location_name %><br>
          <%= @brewery.street_address %><br>
          <%= @brewery.locality %>
          <%= @brewery.region %>,
          <%= @brewery.postal_code %><br>
        </address>
        <p>Open to public: <%= @brewery.open_to_public %></p>
        <p><%= @brewery.brewery_description %></p>
      </div>
    </div>
  </div>
</div>
