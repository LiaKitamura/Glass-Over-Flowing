<%= render 'layouts/navbar2' %>
<div class="content-section">
<%= render 'layouts/pgsearch' %>
  <div class="container">
    <div class="row">
      <h1 class="page-header">Search Results for <%= params[:q] %></h1>
      <div class="beer-search-results">
        <h3>Found <%= pluralize(@beers.length, 'beer') %></h3>
        <% @beers.each do |result| %>
          <div class="result">
            <p><%= link_to(result.name, result) %> | <%= link_to(result.abv, result) %>%</p>
          </div>
        <% end %>
      </div>

      <!-- result shows style name and links to style show page with a list of beers -->
      <div class="style-search-results">
        <h3>Found <%= pluralize(@styles.length, 'style') %></h3>
        <% @styles.each do |result| %>
          <div class="result">
            <p><%= link_to(result.style.style_name, result) %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
