<h1>Add a New Beer</h1>

<%= form_for ([:admin, @beer]) do |f| %>
  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :style %>
  <%= f.text_field :style %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :brewed_by %>
  <%= f.text_field :brewed_by %>

  <%= f.label :ABV %>
  <%= f.text_field :ABV %>

  <%= f.submit('Save Beer') %>
<% end %>
